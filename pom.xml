                <version>2.22.2</version>
                <configuration>
                    <suiteXmlFiles>
                        <file>testng.xml</file>
                        <suiteXmlFile>testng.xml</suiteXmlFile>
                    </suiteXmlFiles>
<!--                    <properties>-->
